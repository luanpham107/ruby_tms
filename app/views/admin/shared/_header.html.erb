<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".app_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path %></li>
        <% if logged_in? %>
          <% if current_user.trainer? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "admin.shared.header.subject.link" %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("admin.shared.header.subject.new"), new_admin_subject_path %></li>
                <li><%= link_to t("admin.shared.header.subject.visit"), admin_subjects_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "admin.shared.header.course.link" %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("admin.shared.header.course.new"), new_admin_course_path %></li>
                <li><%= link_to t("admin.shared.header.course.visit"), admin_courses_path %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("admin.shared.header.course.link"), current_user.courses.first %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), "#" %></li>
              <li><%= link_to t(".setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out"), log_out_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".log_in"), log_in_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
